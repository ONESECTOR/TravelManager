<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@layout/fragment_detail_motion_scene_end"
        motion:constraintSetStart="@layout/fragment_detail_motion_scene_start">
        <OnSwipe
            motion:touchAnchorId="@+id/scrollView2"
            motion:touchRegionId="@+id/scrollView2"
            motion:dragDirection="dragUp"
            motion:moveWhenScrollAtTop="true"
            motion:touchAnchorSide="top" />
    </Transition>

</MotionScene>